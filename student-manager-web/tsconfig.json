{
  "compilerOptions": {
    "target": "es6",                               // Modern JavaScript
    "lib": ["dom", "dom.iterable", "esnext"],     // Web + modern JS
    "allowJs": false,                              // Disable JS if using only TS
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                               // Don’t emit JS files — handled by React scripts
    "jsx": "react-jsx"                            // For JSX with React 17+
  },
  "include": ["src"],                             // Only compile files inside src/
  "exclude": ["node_modules"]                     // Exclude node_modules
}
